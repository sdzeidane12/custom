<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="view_patient_kanban" model="ir.ui.view">
        <field name="name">view_patient_kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="responsible_id"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="note"/>
                <field name="ref"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        name:
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        name:
                                        <field name="responsible_id"/>
                                    </li>
                                    <li>
                                        age:
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        gender:
                                        <field name="gender"/>
                                    </li>
                                    <li>
                                        note:
                                        <field name="note"/>
                                    </li>
                                    <li>
                                        reference:
                                        <field name="ref"/>
                                    </li>


                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="responsible_id"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="note"/>
                <field name="ref"/>
            </tree>

        </field>
    </record>


    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_confirm" name="action_confirm" string="Confirm" class="btn-primary"
                            type="object" states="draft"/>
                    <button id="button_done" name="action_done" string="Done" class="btn-primary"
                            type="object" states="confirm"/>
                    <button id="button_draft" name="action_draft" string="reset to draft" class="btn-primary"
                            type="object" states="cancel"/>
                    <button id="button_cancel" name="action_cancel" string="cancel" states="draft,confirm,done"
                            type="object" class=""/>
                    <field name="state" widget="statusbar" options="{ }" statusbar_visible="draft,confirm,done"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="responsible_id"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="note"/>
                        </group>
                        <group>
                            <field name="ref"/>

                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"
                       filter_domain="['|','|','|',('name','ilike',self), ('ref','ilike',self),('age','ilike',self),('age','ilike',self)]"/>
                <field name="ref"/>
                <field name="gender"/>
                <field name="age"/>
            </search>

        </field>
    </record>

    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_gender': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new quotation, the first step of a new sale!
            </p>
        </field>
    </record>

    <menuitem id="hospital_root"
              name="Hospital"
              sequence="1"/>
    <menuitem id="patient"
              name="Patients"
              parent="hospital_root"
              action="patient_action"
              sequence="10"/>


</odoo>


